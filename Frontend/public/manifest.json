{
	"manifest_version" : 3,
	"name" : "Reminder",
	"icons":{
		"32": "icon.png"
	},
	"version" : "1.0.0",
	"action": {
		"default_popup": "index.html"
	},
	"permissions": [
		"scripting",
		"activeTab"
	],
	"web_accessible_resources": [{
		"resources": ["fonts/OpenDyslexic3-Regular.woff2"],
		"matches": ["<all_urls>"]
	}
	],
	"host_permissions":[
		"http://*/*",
		"https://*/*",
		"<all_urls>"
	]
}
